
<div class="row">
<h3> <%= @post.title %></h3>
</div>
<div class="row">
<div class="col s6 valign-wrapper">
    <i class="small material-icons">event</i>
    <%= @post.created_at.strftime("%B %d, %Y %H:%M")%>
</div>
<div class="col s6 valign-wrapper">
    <i class="small material-icons">account_circle</i>
    <%= link_to user_path(User.find(@post.user_id)) do  %>
    <%= User.find(@post.user_id).first_name %>
    <%= User.find(@post.user_id).last_name %>
    <% end %>
</div>
</div>
<%= image_tag(@post.image.url, :alt => @post.title, :width => '100%' ) %>
<div style="text-align: justify;">
    <p> <%= @post.lead %>
    <p> <%= @post.content %></p>
</div>